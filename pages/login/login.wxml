<view class="container">
  <form class="form" bindsubmit="onSubmit">
    <view class="form-item">
      <input class="input" type="text" placeholder="用户名" bindinput="bindUsernameInput" />
    </view>
    <view class="form-item">
      <input class="input" type="password" placeholder="密码" bindinput="bindPasswordInput" />
    </view>
    <button class="login-btn" form-type="submit" type="primary">登录</button>
  </form>
</view>