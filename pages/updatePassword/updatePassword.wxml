<view class="container">
  <form class="form" bindsubmit="onSubmit">
    <view class="form-item">
      <input class="input" type="text" placeholder="原密码" bindinput="bindOldPwdInput"/>
    </view>
    <view class="form-item">
      <input class="input" type="password" placeholder="新密码"  bindinput="bindNewPwdInput" />
    </view>
    <view class="form-item">
      <input class="input" type="password" placeholder="确认密码"  bindinput="bindreNewPwdInput" />
    </view>
    <button class="login-btn" form-type="submit" type="primary">确认修改</button>
  </form>
</view>