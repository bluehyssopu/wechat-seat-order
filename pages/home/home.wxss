/* pages/home/home.wxss */

/* 首页轮播图 */
.cover_swiper {
  margin-top: 20rpx;
  height: 360rpx;
}

.imageBox {
  width: 100%;
  text-align: center;
}

.swiper-img {
  border-radius: 16rpx;
  width: 90%;
}

/* swiper 指示点样式修改 */
.cover_swiper .wx-swiper-dots {
  position: absolute;
  bottom: 70rpx;
}

.cover_swiper .wx-swiper-dot {
  width: 10rpx;
  height: 5rpx;
  background: #FFFFFF;
  border-radius: 4rpx;
  opacity: 0.4;
}

.wx-swiper-dot.wx-swiper-dot-active {
  width: 20rpx;
  height: 5rpx;
  background: #FFFFFF;
  border-radius: 4rpx;
  opacity: 1;
}

/* 首页六个按钮 */
.btn-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-content: space-between;
}

.btn-view {
  display: flex;
  width: 300rpx;
  margin: 20rpx;
  border-radius: 24rpx;
  box-shadow: 2px 3px 2px 0px rgba(7, 17, 27, 0.05);
}

.btns {
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  line-height: 180rpx;
  align-content: center;
}

.btn-view:hover,
.btns:hover {
  box-shadow: 0 3px 8px 6px rgba(7, 17, 27, 0.09);
  background-color: skyblue;
}